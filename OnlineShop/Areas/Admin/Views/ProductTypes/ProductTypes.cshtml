@model IEnumerable<OnlineShop.Models.ProductTypes>
@{
    ViewData["Title"] = "Product Type";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-lg-6  text-right">
        <a asp-action="CreateProductType" class="btn btn-info"><i class="fa-solid fa-plus"></i>  New Product Type</a>
    </div>
    <div class="col-lg-12 col-md-6">
        <table class="table table-hover">
            <thead>
                <tr class="table-active">
                    <th scope="col">
                        @Html.DisplayNameFor(c=>c.ProductType)
                    </th>
                    <th scope="col">
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductType </td>
                        <td>
                            <partial name="_ProductTypesButtonPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script type="text/javascript">
    $(function() {
        var AlertMessage = '@TempData["AlertMessage"]'
        if (AlertMessage != '')
        {
             alertify.success(AlertMessage);
        }
    })   
</script>

}